{
  "name": "helpfinder-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "services/*",
    "packages/*"
  ],
  "scripts": {
    "build": "npm -ws run build",
    "dev": "npm -w services/api run dev",
    "dev:web": "npm -w apps/web run dev",
    "dev:api": "npm -w services/api run dev",
    "lint": "npm -ws run lint",
    "typecheck": "npm -ws run typecheck"
  }
}

